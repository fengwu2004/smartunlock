<template name="ticket">
  <view class="ticket">
    <view class="result">
      <image wx:if="{{ doorStatus === payfailed }}" src="../image/failed.png" style="width:80px;height:75px"/>
      <image wx:if="{{ doorStatus === unlockfailed }}" src="../image/unlockfailed.png" style="width:80px;height:83px"/>
      <image wx:if="{{ doorStatus === unlocksuccess }}" src="../image/unlocksuccess.png" style="width:80px;height:83px"/>
      <image wx:if="{{ doorStatus === unlocking }}" src="../image/circle.gif" style="width:80px;height:80px"/>
      <view wx:if="{{ doorStatus === unpay }}">￥ 2.00</view>
    </view>
    <view id="tip">
    {{ message }}
    </view>
    <rich-text type="p" class="bottomTip">乘客：如需开具发票，请联系快运公司告知开票详情</rich-text>
  </view>
</template>